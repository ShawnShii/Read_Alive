<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/trophy_1_popup"
    tools:context="com.example.wingsoffreedom.readalive.trophy_1"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/trophy_r_2_hr"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:scaleType="fitCenter"
            android:src="@drawable/gold_gray"
            android:layout_marginLeft="10dp"
            android:layout_above="@+id/trophy_1_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp" />

        <TextView
            android:id="@+id/trophy_1_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read for at least 2 hours to unlock"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/closeTrophy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="35dp"
            android:layout_marginEnd="61dp"
            android:text="CLOSE [X]"
            android:textSize="25dp"/>
    </RelativeLayout>

</FrameLayout>
