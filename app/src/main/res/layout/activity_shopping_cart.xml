<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wingsoffreedom.readalive.ShoppingCart">

    <TextView
        android:id="@+id/cart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Cart"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="48dp"
        tools:layout_editor_absoluteX="56dp" />

    <ImageButton
        android:id="@+id/book_cover"
        android:layout_width="194dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/the_polar_express"
        tools:layout_editor_absoluteY="128dp"
        tools:layout_editor_absoluteX="72dp" />

    <LinearLayout
        android:id="@+id/book_info"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/book_cover"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/book_cover"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="146dp">

        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Polar Express"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/book_title"
            android:text="by Chris Van Allsburg"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/book_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/book_title"
            android:text="1st Grade"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="608dp"
        tools:layout_editor_absoluteY="374dp">

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: $15.00"
            android:textSize="25dp"
            android:layout_marginLeft="50dp" />

        <Button
            android:id="@+id/button_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:layout_marginLeft="50dp"
            android:textSize="20dp"
            android:layout_alignParentTop="true" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
