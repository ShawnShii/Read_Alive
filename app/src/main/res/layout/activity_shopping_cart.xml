<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_read_alive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wingsoffreedom.readalive.ShoppingCart">

    <TextView
        android:id="@+id/cart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Cart"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/no_books">
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/cover"
                    android:layout_width="194dp"
                    android:layout_height="170dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/no_books"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="40dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/the_polar_express"
                    tools:layout_editor_absoluteX="72dp"
                    tools:layout_editor_absoluteY="128dp" />

                <LinearLayout
                android:id="@+id/book_info"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="282dp"
                tools:layout_editor_absoluteY="146dp"
                android:layout_alignTop="@+id/cover"
                android:layout_toEndOf="@+id/cover"
                android:layout_marginStart="41dp"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Polar Express"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/book_title"
                    android:text="by Chris Van Allsburg"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/book_title"
                    android:text="First Grade"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="30dp" >

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/cover2"
                android:layout_width="194dp"
                android:layout_height="170dp"
                android:src="@drawable/cat_hat_cover"
                tools:layout_editor_absoluteY="128dp"
                tools:layout_editor_absoluteX="72dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:layout_below="@+id/no_books"
                android:layout_alignParentStart="true"
                android:layout_marginStart="27dp" />

            <LinearLayout
                android:id="@+id/book_info2"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="282dp"
                tools:layout_editor_absoluteY="146dp"
                android:layout_alignTop="@+id/cover"
                android:layout_toEndOf="@+id/cover"
                android:layout_marginStart="41dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Cat in the Hat"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/author2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/book_title"
                    android:text="by Dr. Seuss"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/grade2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/book_title"
                    android:text="First Grade"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="30dp" >

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: $22.99"
            android:textSize="25dp"
            android:layout_marginLeft="50dp" />

        <Button
            android:id="@+id/button_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:layout_marginLeft="50dp"
            android:textSize="20dp"
            android:layout_alignParentTop="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/no_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@+id/cart_title"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/store_back"
        android:text="Back to Store"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentStart="true" />


</RelativeLayout>
