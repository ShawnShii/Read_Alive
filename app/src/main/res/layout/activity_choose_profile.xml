<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_read_alive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wingsoffreedom.readalive.ChooseProfile">

    <ImageButton
        android:id="@+id/ellen_profile_btn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bear_avatar"
        android:layout_marginStart="136dp"
        android:layout_marginTop="29dp"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/add_profile_btn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/add_avatar"
        android:layout_marginEnd="133dp"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/ellen_profile_btn"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/ellen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ellen_profile_btn"
        android:text="Ellen Smith"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/ellen_profile_btn"
        android:layout_below="@+id/ellen_profile_btn" />

    <ImageButton
        android:id="@+id/fill_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/ellen_name"
        android:layout_alignStart="@+id/ellen_name"
        android:layout_marginTop="31dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/fill_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="     "
        android:layout_below="@+id/add_profile_btn"
        android:layout_alignStart="@+id/add_profile_btn" />

</RelativeLayout>
