<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wingsoffreedom.readalive.Read">

    <ImageView
        android:id="@+id/page2_0"
        android:layout_width="515dp"
        android:layout_height="511dp"
        android:src="@drawable/page5_0"
        android:layout_marginBottom="89dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/page2_1"
        android:layout_width="508dp"
        android:layout_height="511dp"
        android:src="@drawable/page5_1"
        android:layout_alignBottom="@+id/page2_0"
        android:layout_toEndOf="@+id/page2_0" />

    <TextView
        android:id="@+id/library_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:layout_marginStart="67dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Back to Library"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
