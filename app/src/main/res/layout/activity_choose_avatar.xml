<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_read_alive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wingsoffreedom.readalive.ChooseAvatar">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose an avatar"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/avatar_pig"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:src="@drawable/pig_avatar"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/avatar_panda"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:src="@drawable/panda_avatar"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/avatar_monkey"
        android:layout_toEndOf="@+id/avatar_monkey"
        android:layout_marginStart="35dp" />

    <ImageButton
        android:id="@+id/avatar_bear"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bear_avatar"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/avatar_pig"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/avatar_frog"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:src="@drawable/frog_avatar"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/avatar_monkey"
        android:layout_toStartOf="@+id/avatar_monkey"
        android:layout_marginEnd="32dp" />

    <ImageButton
        android:id="@+id/avatar_monkey"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:src="@drawable/monkey_avatar"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/avatar_pig"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
