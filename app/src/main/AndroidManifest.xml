<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wingsoffreedom.readalive">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ChooseProfile"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateProfile"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ReadAlive"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_read_alive"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Read"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_read"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShoppingCart"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ChooseAvatar"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>